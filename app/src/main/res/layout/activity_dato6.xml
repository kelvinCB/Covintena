                app:srcCompat="@drawable/dato6_3" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4.	Colócate la mascarilla sobre la cara, cubriendo boca y nariz. Pellizca la tira de metal o el borde rígido de la mascarilla para que se amolde a la forma de su nariz."

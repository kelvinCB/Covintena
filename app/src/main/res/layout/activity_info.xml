<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondovirus"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:background="#E53935"
        android:gravity="center_vertical"
        android:text="  INFO (COVID - 19)"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DATO1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#B933FC"
        android:gravity="center"
        android:soundEffectsEnabled="false"
        android:text="¿QUÉ ES?"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/DATO3"
        app:layout_constraintEnd_toStartOf="@+id/DATO2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/DATO3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00BFA5"
        android:text="ORIGEN"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/DATO5"
        app:layout_constraintEnd_toStartOf="@+id/DATO4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DATO1" />

    <Button
        android:id="@+id/DATO5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FA2929"
        android:text="DETALLES"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/DATO6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DATO3" />

    <Button
        android:id="@+id/DATO2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFAB00"
        android:text="SÍNTOMAS"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/DATO4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DATO1"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/DATO4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00C853"
        android:text="MEDIDAS"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/DATO6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DATO3"
        app:layout_constraintTop_toBottomOf="@+id/DATO2" />

    <Button
        android:id="@+id/DATO6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#DD427B"
        android:text="TIPS"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DATO5"
        app:layout_constraintTop_toBottomOf="@+id/DATO4" />

    <TextView
        android:id="@+id/textView81"
        android:layout_width="84dp"
        android:layout_height="82dp"
        android:background="#00BFA5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnaudio"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/escucha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>




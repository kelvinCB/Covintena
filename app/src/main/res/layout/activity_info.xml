<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondovirus"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:background="#E53935"
        android:gravity="center_vertical"
        android:text="  Información (COVID - 19)"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DATO1"
        android:layout_width="180dp"
        android:layout_height="183dp"
        android:background="#BFB933FC"
        android:soundEffectsEnabled="false"
        android:text="¿QUÉ ES?"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/DATO2"
        android:layout_width="180dp"
        android:layout_height="183dp"
        android:background="#BFFFAB00"
        android:text="SÍNTOMAS"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/DATO1"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/DATO3"
        android:layout_width="180dp"
        android:layout_height="183dp"
        android:background="#BF00BFA5"
        android:text="ORIGEN"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DATO1" />

    <Button
        android:id="@+id/DATO4"
        android:layout_width="180dp"
        android:layout_height="183dp"
        android:background="#BF00C853"
        android:text="MEDIDAS"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/DATO3"
        app:layout_constraintTop_toBottomOf="@+id/DATO2" />

    <Button
        android:id="@+id/DATO5"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:background="#BFFA2929"
        android:text="DETALLES"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DATO3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/DATO6"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:background="#BFDD427B"
        android:text="TIPS"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/DATO5"
        app:layout_constraintTop_toBottomOf="@+id/DATO4"
        app:layout_constraintVertical_bias="0.428" />

</androidx.constraintlayout.widget.ConstraintLayout>



